@model SurveyApp.Models.SurveyResponse

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.css">
  <link rel="stylesheet" href="/css/styles.css">
  <title>Enquete :: Resposta</title>
</head>
<body>
  <div class="container">
    <h1>Enquete</h1>
    <div class="row">
      <div class="offset-3 col-6">
        <h2>Você teria coragem de fazer uma viagem sem volta para Marte?</h2>
        <h5>Preencha os campos e marque sua resposta.</h5>
        <form method="POST">
          <div class=form-group>
            <label asp-for="name">Seu nome:</label><br>
            <input asp-for="name" class="form-control">
          </div>
          <div class=form-group>
            <label asp-for="email">Seu e-mail:</label><br>
            <input asp-for="email" class="form-control">
          </div>
          <div class=form-group>
            Resposta:
            <div>
              <label for="yes" class="form-check-label">Sim</label>
              <input type="radio" asp-for="accept" id="yes" value="true" class="form-check-input">
            </div>
            <div>
              <label for="not" class="form-check-label">Não</label>
              <input type="radio" asp-for="accept" id="not" value="false" class="form-check-input">
            </div>
          </div>
          <input type="submit" value="Enviar resposta">
        </form>
      </div>
    </div>
  </div>
</body>
</html>